{
  "name": "neet",
  "version": "0.1.0",
  "description": "NodeJS Enhanced Edition Tools for Infinity Engine games",
  "main": "index.js",
  "scripts": {
    "lint": "eslint -f junit .",
    "test": "istanbul cover ./node_modules/.bin/_mocha -- --recursive -R spec -r should",
    "posttest": "istanbul check-coverage && rm -rf coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YTheon/NEET.git"
  },
  "keywords": [
    "Baldur",
    "EE",
    "mods"
  ],
  "author": "YTheon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YTheon/NEET/issues"
  },
  "homepage": "https://github.com/YTheon/NEET#readme",
  "private": true,
  "dependencies": {
    "async": "^2.0.0-rc.3",
    "express": "^4.13.4",
    "lodash": "^4.11.1",
    "lokijs": "^1.3.16",
    "request": "^2.72.0",
    "sha.js": "^2.4.5",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "eslint": "^2.9.0",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "mochawesome": "^1.3.4",
    "nock": "^8.0.0",
    "rewire": "^2.5.1",
    "should": "^8.3.1",
    "sinon": "^1.17.3",
    "supertest": "^1.2.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        4
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
